import numpy as np
from scipy.optimize import linprog
import requests

PM_TARGET     = 15.0
WHO_GUIDE     = 1.0
PULL_FRACTION = 0.4
SCALE         = 10.0

EFFECTS   = np.array([3.0, 5.0, 2.5])          
BASE_COST = np.array([200.0, 250.0, 175.0])    
P_MAX     = 0.7                                
UB        = np.array([40.0, 30.0, 50.0])       
SLACK_PEN = 1e4                                


def geocode_city(city):
    js = requests.get(
        "https://geocoding-api.open-meteo.com/v1/search",
        params={"name": city, "count": 1, "language": "en", "format": "json"}
    ).json()
    r = js["results"][0]
    return r["latitude"], r["longitude"], r["name"]


def fetch_pm25(city):
    lat, lon, name = geocode_city(city)
    js = requests.get(
        "https://air-quality-api.open-meteo.com/v1/air-quality",
        params={"latitude": lat, "longitude": lon, "current": "pm2_5", "timezone": "UTC"}
    ).json()

    pm = js["current"]["pm2_5"]
    when = js["current"]["time"]
    unit = js["current_units"]["pm2_5"]
    return pm, when, unit, name


def required_units(pm):
    if pm >= PM_TARGET:
        return (pm - PM_TARGET) * SCALE
    else:
        return PULL_FRACTION * max(0, pm - WHO_GUIDE) * SCALE


def build_lp(R, costs):
    e1, e2, e3 = EFFECTS
    P = P_MAX

    A = np.zeros((4, 7))
    b = np.zeros(4)

    A[0, 0] = e1; A[0, 1] = e2; A[0, 2] = e3; A[0, 3] = 1
    b[0] = R

    A[1, 0] = e1*(1-P); A[1, 1] = -P*e2; A[1, 2] = -P*e3; A[1, 4] = 1
    A[2, 0] = -P*e1;    A[2, 1] = e2*(1-P); A[2, 2] = -P*e3; A[2, 5] = 1
    A[3, 0] = -P*e1;    A[3, 1] = -P*e2;    A[3, 2] = e3*(1-P); A[3, 6] = 1

    c = np.zeros(7)
    c[:3] = costs
    c[3] = SLACK_PEN

    bounds = [
        (0, UB[0]), (0, UB[1]), (0, UB[2]),
        (0, None), (0, None), (0, None), (0, None)
    ]
    
    return c, A, b, bounds


def run(city):
    pm, when, unit, loc_name = fetch_pm25(city)
    R = required_units(pm)
    costs = BASE_COST

    c, A, b, bounds = build_lp(R, costs)
    res = linprog(c, A_eq=A, b_eq=b, bounds=bounds, method="highs")
    print(f"Value of A: {A}")
    print(f"Value of B: {b}")
    print(f"Value of C: {c}")
    x1, x2, x3, v, s1, s2, s3 = res.x
    t = EFFECTS @ np.array([x1, x2, x3])
    delta_pm = t / SCALE
    final_pm = pm - delta_pm
    print("\nCity:", city)
    print(f"PM2.5 now: {pm:.2f} {unit}")
    print(f"Required reduction units: {R:.2f}")

    print("\nOptimal interventions:")
    print(f"  Transport   x1 = {x1:.3f}")
    print(f"  Industry    x2 = {x2:.3f}")
    print(f"  Residential x3 = {x3:.3f}")
    print(f"  Shortfall v    = {v:.3f}")

    print("\nPM2.5 result:")
    print(f"  Reduction: {delta_pm:.2f} {unit}")
    print(f"  Final PM2.5: {final_pm:.2f} {unit}")

    cost_val = costs @ np.array([x1, x2, x3])
    print(f"\nCost: ${cost_val:,.2f}")


if __name__ == "__main__":
    while True:
        try:
            city = input("\nEnter a city (or 'q' to quit): ").strip()
        except (EOFError, KeyboardInterrupt):
            print("\nGoodbye!")
            break
        if city.lower() in {"q", "quit", "exit"}:
            print("\nGoodbye!")
            break
        if city:
            run(city)
        else:
            print("Please enter a valid city name.")
